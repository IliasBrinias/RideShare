<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>
    <TextView
        android:id="@+id/textView1"
        style="@style/TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textAlignment="textStart"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/trebuc"
        android:text="@string/became_a_driver"
        android:textColor="?colorPrimaryVariant"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/textView2"
        style="@style/TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textAlignment="textStart"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/trebuc"
        android:text="All your data will be erased. If you want to keep your Messages and your routes create a new account and become driver."
        android:textColor="@color/shadow"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="end">
        <TextView
            android:id="@+id/textViewCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="@string/cancel"
            android:fontFamily="@font/trebuc"
            android:textColor="@color/shadow"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:textAllCaps="false"
            android:background="@drawable/background_button_decline"
            android:backgroundTint="?colorPrimary"
            android:text="@string/submit"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
</LinearLayout>