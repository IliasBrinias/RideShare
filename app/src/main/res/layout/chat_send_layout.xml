<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutSender"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewTimeSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tcm"
        android:textColor="?textShadow"
        android:text="12:40"
        android:padding="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end">

    <TextView
        android:id="@+id/textViewMessageSender"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trebuc"
        android:padding="10dp"
        android:background="@drawable/tablerow_background"
        android:backgroundTint="?colorPrimary"
        android:textColor="?colorOnPrimary"
        android:text="Kala autos o nikos prekas otk.. ax einai san ena loukoumaki"
        />
    <TextView
        android:id="@+id/textViewViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:backgroundTint="?textShadow"
        android:layout_gravity="end"
        android:textColor="@color/shadow"
        android:text="@string/send"
        android:fontFamily="@font/trebuc"
        />

    </LinearLayout>
</LinearLayout>