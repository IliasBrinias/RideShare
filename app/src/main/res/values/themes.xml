<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RideShare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="bottomSheet">@color/white</item>
        <item name="navItem">@color/navItemBack</item>
        <item name="listViewTextColor">@color/black</item>
        <item name="textShadow">@color/gray</item>
        <item name="navItemCheckedBack">@color/lightBlue</item>
        <item name="navItemUncheckedBack">@color/lightShadow</item>
        <item name="chatTextBack">@color/shadow</item>
        <item name="tableRowShadow">@color/tableRowShadow</item>
        <item name="lastRouteInactiveShadow">@color/lastRoutesShadow</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">?colorPrimary</item>
<!--        <color name="mtrl_textinput_default_box_stroke_color">?colorPrimaryVariant</color>-->
    </style>

    <style name="Theme.RideShare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.RideShare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RideShare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>