<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputEditTextLoginStyle" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">?colorPrimaryVariant</item>
        <item name="placeholderTextColor">?colorPrimaryVariant</item>
        <item name="startIconTint">?colorPrimary</item>
        <item name="android:textColorHint">@color/shadow</item>
    </style>
    <style name="TextInputEditTextDropdownStyle" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="startIconTint">?colorPrimary</item>
    </style>
    <style name="TitleTextView" parent = "@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TitleTextRouteList" parent="TitleTextView">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TitleTextViewSaveRouteSteps" parent = "@android:style/Widget.TextView">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="SubmitButtons" parent = "@style/Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:fontFamily">@font/trebuc</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>
    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>

    <style name="toggleButton" parent="android:Widget">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/toggle_bg</item>
        <item name="android:textColor">@drawable/toggle_day_selected_color</item>
    </style>
    <style name="SubTitleViewLine" parent="">
        <item name="android:layout_height">8dp</item>
        <item name="android:background">?colorPrimary</item>
    </style>
    <style name="MyPickerDialog" parent="@android:style/Widget.DatePicker">
        <item name="colorAccent">?colorPrimary</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">?colorPrimary</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">?colorOnPrimary</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MyAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>
    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Theme.Custom" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="titleRouteFilter">
        <item name="android:textColor">?colorPrimaryVariant</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="itemRouteFilter">
        <item name="android:textColor">?colorPrimaryVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/trebuc</item>
    </style>
    <style name="editTextRouteFilter">
        <item name="android:layout_width">242dp</item>
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>
    <style name="radioButtonStyle">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:buttonTint">@drawable/radio_style_selector</item>
        <item name="android:textColor">@drawable/radio_style_selector</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/trebuc</item>
    </style>
    <style name="signInButtons">
        <item name="android:elevation">5dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/trebuc</item>
    </style>
    <style name="fieldFilterRoute">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/route_filter_field_background</item>
        <item name="android:fontFamily">@font/tcm</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">?colorPrimaryVariant</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.MyCustomDay" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/my_custom_day_color</item>
    </style>
</resources>